<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/alarm_screen_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="00:00"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp" >

            <ImageView
                android:id="@+id/imVAlarm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/act1" />

            <TextView
                android:id="@+id/alarm_screen_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="20dp"
                android:text="Alarm Name"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/alarm_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="Alarm full description" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/alarm_screen_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dismiss"   
            android:background="@color/blue"
            android:shadowColor="@color/blue"
            android:textColor="@color/white"
            android:textColorLink="@color/blue"
            android:textSize="26sp" />

    </LinearLayout>

</RelativeLayout>
